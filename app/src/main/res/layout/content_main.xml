<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    tools:context="com.roohia.hp.laundry.gui.activities.HomeActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="20dp">


            <RelativeLayout
                android:id="@+id/rlt_log_new_order"
                android:layout_width="0dp"
                android:layout_height="165dp"
                android:layout_weight="1"
                android:background="@drawable/border_round_corners_home_grid"
                android:layout_marginRight="10dp">


                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/ib_new_order"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:clickable="false"
                    android:background="@drawable/icon_new_order_home_grid" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ib_new_order"
                    android:layout_centerHorizontal="true"
                    android:text="New Laundry Order"
                    android:clickable="false"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlt_my_logged_orders"
                android:layout_width="0dp"
                android:layout_height="165dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@drawable/border_round_corners_home_grid">

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/ib_view_orders"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:clickable="false"
                    android:background="@drawable/icon_all_orders_home_grid" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:layout_below="@id/ib_view_orders"
                    android:layout_centerHorizontal="true"
                    android:text="My Laundry Orders"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">


            <RelativeLayout
                android:id="@+id/rlt_user_profile"
                android:layout_width="0dp"
                android:layout_height="165dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_round_corners_home_grid">


                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/ib_synchronize"
                    android:layout_width="100dp"
                    android:clickable="false"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/icon_user_profile_home_grid" />

                <TextView
                    android:layout_width="match_parent"
                    android:clickable="false"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ib_synchronize"
                    android:layout_centerHorizontal="true"
                    android:text="View Profile"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlt_logout"
                android:layout_width="0dp"
                android:layout_height="165dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@drawable/border_round_corners_home_grid">

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/ib_logout"
                    android:layout_width="100dp"
                    android:clickable="false"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/icon_logout_home_grid" />

                <TextView
                    android:layout_width="match_parent"
                    android:clickable="false"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ib_logout"
                    android:layout_centerHorizontal="true"
                    android:text="Logout"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
